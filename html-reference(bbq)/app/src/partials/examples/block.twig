<div class="block block--{{ block_name }}" id="{{ block_id }}" {% if block_role %} role="{{ block_role }}"  {% endif %}>
  {% if block_label %}
    <h2 class="block__title m0">{{ block_label }}</h2>
  {% endif %}
  <div class="block__content">
    {% block content %}
      {{ content }}
    {% endblock %}
  </div>
</div>